<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#242A75"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/logoThales"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:src="@drawable/thales_logo"
            android:contentDescription="Thales Logo" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Configuration de la Mission"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:gravity="center" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@drawable/a_code_green"
            android:contentDescription="Logo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:padding="15dp">

        <EditText
            android:id="@+id/teamName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/edit_text_border"
            android:hint="Nom de l'équipe"
            android:minHeight="48dp"
            android:padding="8dp" />

        <EditText
            android:id="@+id/teamId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/edit_text_border"
            android:hint="ID de l'équipe"
            android:minHeight="48dp"
            android:padding="8dp" />

        <EditText
            android:id="@+id/targetInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/edit_text_border"
            android:hint="Info de la cible"
            android:minHeight="48dp"
            android:padding="8dp" />

        <Button
            android:id="@+id/validateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Valider la mission"
            android:background="#242A75"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:layout_marginTop="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#242A75"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Add buttons here if needed -->

    </LinearLayout>
</RelativeLayout>
